<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aaron.androiddevart.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.aaron.androiddevart.view.VelocityTrackerView
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/velocity_tracker"
        android:layout_height="120dp"
        android:text="Hello World!"/>

    <com.aaron.androiddevart.view.GestureDetectorView
        android:layout_width="match_parent"
        android:id="@+id/gesture_detector"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/velocity_tracker"
        android:layout_height="40dp"/>

    <com.aaron.androiddevart.view.ScrollEnabledView
        android:layout_width="200dp"
        android:text="Content"
        android:gravity="center"
        android:id="@+id/scroll_view"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/gesture_detector"
        android:layout_height="40dp"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_below="@id/scroll_view"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/left_button"
            android:text="@string/main_left_button_text"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/right_button"
            android:textAllCaps="false"
            android:text="@string/main_right_button_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/animate_button"
        android:layout_below="@id/button_layout"
        android:textAllCaps="false"
        android:text="@string/main_animate_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/change_layout_button"
        android:textAllCaps="false"
        android:layout_below="@id/animate_button"
        android:text="@string/main_change_layout_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
