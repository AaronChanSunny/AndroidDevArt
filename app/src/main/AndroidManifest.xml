<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.aaron.androiddevart"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <permission
        android:name="com.aaron.androiddevart.permission.ACCESS_BOOK_SERVICE"
        android:protectionLevel="normal"/>

    <uses-permission android:name="com.aaron.androiddevart.permission.ACCESS_BOOK_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName=".MainActivity"
            android:process=":remote"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.androiddevart.MainActivity"/>
        </activity>
        <activity
            android:name=".ThirdActivity"
            android:label="@string/title_activity_third"
            android:parentActivityName=".MainActivity"
            android:process="com.aaron.androiddevart.remote"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.androiddevart.MainActivity"/>
        </activity>
        <activity
            android:name=".ObjectSerialActivity"
            android:label="@string/title_activity_object_serial"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.androiddevart.MainActivity"/>
        </activity>

        <service
            android:name=".MessengerService"
            android:process=":messenger"/>
        <service
            android:name=".BookManagerService"
            android:process=":book"/>

        <activity
            android:name=".MessengerActivity"
            android:label="@string/title_activity_messenger"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.androiddevart.MainActivity"/>
        </activity>
        <activity
            android:name=".BookManagerActivity"
            android:label="@string/title_activity_book_manager"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aaron.androiddevart.MainActivity"/>
        </activity>
    </application>

</manifest>
